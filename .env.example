# 🔐 Email sender credentials (used by Nodemailer)
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# 📬 SMTP server configuration
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
SMTP_FROM=sender@example.com
SMTP_BCC=monitor@example.com

# 🌐 URLs used in email templates
LOGO_URL=https://yourdomain.com/logo.jpg
REFERENCE_URL=https://example.com/external-info

# 🌍 Optional: Port to run the service (default is 3000)
PORT=3000